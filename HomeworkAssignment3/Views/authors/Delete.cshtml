@model HomeworkAssignment3.Models.Author

<h3>Are you sure you want to delete this author?</h3>

<dl class="dl-horizontal">
    <dt>@Html.DisplayNameFor(m => m.Name)</dt>
    <dd>@Html.DisplayFor(m => m.Name)</dd>
    <dt>@Html.DisplayNameFor(m => m.Surname)</dt>
    <dd>@Html.DisplayFor(m => m.Surname)</dd>
</dl>

@using (Html.BeginForm("Delete", "authors", new { id = Model.AuthorId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    </div>
}
